<html>
<head>
  <title>Navbar</title>
  <link rel="stylesheet" href="../../public/css/style.css">
  <style>
    /* Glassmorphism effect for the navbar */
    .glass {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      border-radius: 10px;
      padding: 10px 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    /* Navbar links */
    .navbar {
      display: flex;
      gap: 20px;
      align-items: center;
    }

    .navbar a {
      text-decoration: none;
      padding: 10px 15px;
      border-radius: 5px;
      font-weight: bold;
      transition: all 0.3s ease-in-out;
    }

    /* Hover effect for navbar links */
    .navbar a:hover {
      background: rgba(255, 255, 255, 0.3);
      color: #007bff;
      transform: scale(1.1);
    }

    /* Right-side buttons (Chatbot + Dark Mode) */
    .navbar-end {
      display: flex;
      align-items: center;
      gap: 15px;
    }

    /* Dark mode button glow effect */
    .swap {
      transition: all 0.3s ease-in-out;
      cursor: pointer;
    }

    .swap:hover {
      filter: drop-shadow(0 0 10px rgba(255, 255, 255, 0.5));
      transform: scale(1.1);
    }

    /* Chatbot button animation */
    .dropdown button {
      transition: all 0.3s ease-in-out;
      border-radius: 5px;
    }

    .dropdown button:hover {
      background: #007bff;
      color: white;
      transform: scale(1.05);
      box-shadow: 0 0 10px rgba(0, 123, 255, 0.6);
    }
  </style>
</head>
<body>
  <nav>
    <div class="glass">
      <!-- Left side: Navbar links -->
      <div class="navbar">
        <a href="/" class="btn btn-ghost text-xl">Home</a>
        <a href="/helpline" class="btn btn-ghost text-xl">Helpline</a>
        <a href="/community" class="btn btn-ghost text-xl">Join our Community</a>
        <a href="/about" class="btn btn-ghost text-xl">About Us</a>
      </div>

      <!-- Right side: Light/Dark mode + Chatbot -->
      <div class="navbar-end">
        <!-- Dark mode toggle -->
        <label class="swap swap-rotate">
          <input type="checkbox" class="theme-controller" value="pastel" />
          <svg class="swap-off h-10 w-10 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
            <path d="M5.64,17l-.71.71a1,1,0,0,0,0,1.41,1,1,0,0,0,1.41,0l.71-.71A1,1,0,0,0,5.64,17ZM5,12a1,1,0,0,0-1-1H3a1,1,0,0,0,0,2H4A1,1,0,0,0,5,12Zm7-7a1,1,0,0,0,1-1V3a1,1,0,0,0-2,0V4A1,1,0,0,0,12,5ZM5.64,7.05a1,1,0,0,0,.7.29,1,1,0,0,0,.71-.29,1,1,0,0,0,0-1.41l-.71-.71A1,1,0,0,0,4.93,6.34Zm12,.29a1,1,0,0,0,.7-.29l.71-.71a1,1,0,1,0-1.41-1.41L17,5.64a1,1,0,0,0,0,1.41A1,1,0,0,0,17.66,7.34ZM21,11H20a1,1,0,0,0,0,2h1a1,1,0,0,0,0-2Zm-9,8a1,1,0,0,0-1,1v1a1,1,0,0,0,2,0V20A1,1,0,0,0,12,19ZM18.36,17A1,1,0,0,0,17,18.36l.71.71a1,1,0,0,0,1.41,0,1,1,0,0,0,0-1.41ZM12,6.5A5.5,5.5,0,1,0,17.5,12,5.51,5.51,0,0,0,12,6.5Zm0,9A3.5,3.5,0,1,1,15.5,12,3.5,3.5,0,0,1,12,15.5Z" />
          </svg>
          <svg class="swap-on h-10 w-10 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
            <path d="M21.64,13a1,1,0,0,0-1.05-.14,8.05,8.05,0,0,1-3.37.73A8.15,8.15,0,0,1,9.08,5.49a8.59,8.59,0,0,1,.25-2A1,1,0,0,0,8,2.36,10.14,10.14,0,1,0,22,14.05,1,1,0,0,0,21.64,13Zm-9.5,6.69A8.14,8.14,0,0,1,7.08,5.22v.27A10.15,10.15,0,0,0,17.22,15.63a9.79,9.79,0,0,0,2.1-.22A8.11,8.11,0,0,1,12.14,19.73Z" />
          </svg>
        </label>

        <!-- Chatbot dropdown -->
        <div class="dropdown dropdown-end">
          <button class="btn">ChatBot</button>
          <ul tabindex="0" class="dropdown-content menu bg-base-100 rounded-box z-[1] w-80 p-2 shadow">
            <div class="chat chat-start">
              <div class="chat-image avatar">
                <div class="w-10 rounded-full">
                  <img src="data:image/png;base64,...">
                </div>
              </div>
              <div class="chat-bubble">Hello! How can I help you?</div>
            </div>
          </ul>
        </div>
      </div>
    </div>
  </nav>
</body>
</html>